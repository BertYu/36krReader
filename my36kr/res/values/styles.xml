<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="android:actionMenuTextColor">@color/white</item>

        <!--使ActionBar浮于布局之上不占用空间-->
        <!--<item name="android:windowActionBarOverlay">true</item>-->
    </style>

    <!--**********actionBar样式**********-->
    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/primary_color</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>
    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- ActionBar tabs text styles -->
    <style name="MyActionBarTabText" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/white</item>
    </style>
    <!--**********actionBar样式**********-->

    <!--自定义progressBar-->
    <style name="Custom.Widget.Holo.ProgressBar.Horizontal" parent="android:Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/custom_progress_horizontal</item>
        <item name="android:minHeight">5dip</item>
        <item name="android:maxHeight">15dip</item>
    </style>

    <!--我的收藏同步按钮的progressBar-->
    <style name="SycnProgressBar">
        <item name="android:indeterminateDrawable">@drawable/my_favorite_sync_rotate_btn</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

